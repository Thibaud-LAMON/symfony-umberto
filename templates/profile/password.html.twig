{% extends 'base.html.twig' %}

{% block title %}Profil de {{app.user.username}}{% endblock %}

{% block body %}

<div class="row">
        <div class="col-2">
            <ul class="list-unstyled px-2 text-center border-end shadow " style="height:100vh">
                <br>
                <li><a href="{{ path('app_main') }}" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Revenir au menu principal</button></a></li>
                <br>
                <li><a href="{{ path('app_profil_edit') }}" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Profil</button></a></li>
                <br>
                <li><a href="{{ path('app_profil_password') }}" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Mot de passe</button></a></li>
            </ul>
        </div>

        <div class="col-8">
            {% for message in app.flashes('message') %}
                <br>
                <div class="col-8">
                    <div class="alert alert-success" role="alert">{{message}}</div>
                </div>
            {% endfor %}
            {% if app.flashes('echec') %}
                <br>
                <div class="col-8">
                    <div class="alert alert-danger" role="alert">{{echec}}</div>
                </div>
            {% endif %}
            <section class="container col-8">
                <div class="row">
                    <div class="col">
                        <h1>Bonjour {{app.user.username}} !</h1>

                        <p class="fs-2">Vous pouvez modifier votre mot de passe ici !</p>

                        {{ form_start(formPassword) }}
                            {{ form_row(formPassword.password) }}

                            <button type="submit" class="btn btn-primary btn-lg my-3">Modifier</button>
                        {{ form_end(formPassword) }}
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
