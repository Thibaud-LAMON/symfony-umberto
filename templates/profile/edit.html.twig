{% extends 'base.html.twig' %}

{% block title %}Profil de {{app.user.username}}{% endblock %}

{% block body %}

<div class="row">
        <div class="col-2">
            <ul class="list-unstyled px-2 text-center border-end shadow " style="height:100vh">
                <br>
                <li><a href="{{ path('app_main') }}" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Revenir au menu principal</button></a></li>
                <br>
                <li><a href="{{ path('app_profil_edit') }}" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Profil</button></a></li>
                <br>
                <li><a href="#" class="text-decoration-none"><button href="#" class="btn btn-outline-secondary">Mot de passe</button></a></li>
            </ul>
        </div>

        <div class="col-9">
            <h1>Bonjour {{app.user.username}} !</h1>

            <p class="fs-2">Vous pouvez modifier vos informations ici !</p>

            {{ form_start(formEdit) }}
                {{ form_row(formEdit.email) }}
                {{ form_row(formEdit.username) }}

                <button type="submit" class="btn btn-primary btn-lg my-3">Modifier</button>
            {{ form_end(formEdit) }}
        </div>
    </div>
{% endblock %}
