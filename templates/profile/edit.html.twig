{% extends 'base.html.twig' %}

{% block title %}Profil de {{app.user.username}}{% endblock %}

{% block body %}

<div class="row">
        <div class="col-2">
            {% include "_partials/_sidenav/_profile.html.twig" %}
        </div>

        <div class="col-8">
            {% for message in app.flashes('message') %}
                <br>
                <div class="col-8">
                    <div class="alert alert-success" role="alert">{{message}}</div>
                </div>
            {% endfor %}    
            
            <section class="container col-8">
                <div class="row">
                    <div class="col">
                        <h1>Bonjour {{app.user.username}} !</h1>

                        <p class="fs-2">Vous pouvez modifier vos informations ici !</p>

                        {{ form_start(formEdit) }}
                            {{ form_row(formEdit.email) }}
                            {{ form_row(formEdit.username) }}

                            <button type="submit" class="btn btn-primary btn-lg my-3">Modifier</button>
                        {{ form_end(formEdit) }}
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
