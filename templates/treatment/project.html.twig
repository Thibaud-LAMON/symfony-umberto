                            </tr>
                        </thead>
                        <tbody>
                            {% for project in userProjects %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_treatment_second', { 'projectId': project.id}) }}" class="text-decoration-none" style="color: black;">
