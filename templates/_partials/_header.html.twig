{% block styles %}
    <style>
        .navbar-custom {
            background-color: #07435F !important;
        }
    </style>
{% endblock %}

{% block content %}
    <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_profil_edit') }}"><i class="fa-solid fa-circle-user fa-2xl"></i></a>
                        </li>
                    {% else %}
                        {% if app.request.attributes.get('_route') == 'app_register' %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Me connecter</a>
                            </li>
                        {% elseif app.request.attributes.get('_route') == 'app_login' %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">M'inscrire</a>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}