{% extends 'base.html.twig' %}

{% block title %}UMBERTO - Univers{% endblock %}

{% block body %}
<div class="row">
    <div class="col-2">
        {% include "_partials/_sidenav/_app_able.html.twig" %}
    </div>
    <div class="col-10">
        {% include "_partials/_numbers.html.twig" %}
        <div class="container col-8">
            <div class="row">
                <div class="col">
                    {{ wo_render_breadcrumbs({separator: '>', listId: 'breadcrumbs'}) }}
                    <h1>Branche création</h1>
                    {{ form_start(branchForm) }}
                        {{ form_row(branchForm.name) }}
                        {#{{ form_row(universeForm.project)}}#}

                        <button type="submit" class="btn btn-primary btn-color btn-lg my-3">Créer</button>
                    {{ form_end(branchForm) }}
                    <br>
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Branches existantes</th>
                            </tr>
                        </thead>
                            <tbody>
                            {% for branch in branchTab %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_ideas',{ 'projectId': projectId, 'universeId': universeId, 'branchId': branch.id }) }}" class="text-decoration-none" style="color: black;">
                                            {{ branch.name }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
