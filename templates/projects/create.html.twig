{% extends 'base.html.twig' %}

{% block title %}UMBERTO - Créer un projet{% endblock %}

{% block body %}
<div class="row">
    <div class="col-2">
        {% include "_partials/_sidenav/_app.html.twig" %}
    </div>
    <div class="col-10">
        {% include "_partials/_numbers.html.twig" %}
        <div class="container col-8">
            <div class="row">
                <div class="col">
                    <h1>Projets création</h1>
                    {{ form_start(projectForm) }}
                        {{ form_row(projectForm.name) }}

                        <button type="submit" class="btn btn-primary btn-lg btn-color my-3">Créer</button>
                    {{ form_end(projectForm) }}
                    <br>
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Univers existants</th>
                            </tr>
                        </thead>
                            <tbody>
                                {% for project in userProjects %}
                                    <tr>
                                        <td>{{ project.name }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
